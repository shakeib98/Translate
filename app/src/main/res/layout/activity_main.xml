<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout">

        <TextView
            android:id="@+id/textViewNumbers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textViewHeight"
            android:background="@color/numberCategoryColor"
            android:text="@string/categoryOne"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeOfCategory"
            android:paddingTop="@dimen/textViewPaddingTop"
            android:paddingLeft="@dimen/textViewPaddingLeft"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textViewColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textViewHeight"
            android:background="@color/colorCategoryColor"
            android:text="@string/categoryTwo"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSizeOfCategory"
            android:paddingTop="@dimen/textViewPaddingTop"
            android:paddingLeft="@dimen/textViewPaddingLeft"
            android:textStyle="bold"
            />

    </LinearLayout>

</ScrollView>